pipeline {
    agent any

    tools {
        maven 'Maven3'
    }

    stages {
        stage('Clone Code') {
            steps {
                git 'https://github.com/vishnukrajan007/mass-app.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Archive Artifact') {
            steps {
                archiveArtifacts artifacts: 'target/*.war', fingerprint: true
            }
        }
    }
}

